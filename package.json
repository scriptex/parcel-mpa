{
	"name": "parcel-mpa",
	"version": "1.0.0",
	"description": "A starter template for web applications using Parcel as a module bundler.",
	"scripts": {
		"start": "parcel src/*.html",
		"build": "rm -rf dist && parcel build src/*.html",
		"lint": "yarn lint:ts && yarn lint:scss",
		"lint:ts": "eslint './src/scripts/**/*.ts'",
		"lint:scss": "stylelint src/styles/**/*.scss"
	},
	"dependencies": {},
	"devDependencies": {
		"@parcel/transformer-sass": "2.9.3",
		"@typescript-eslint/eslint-plugin": "6.7.0",
		"@typescript-eslint/parser": "6.7.0",
		"eslint": "8.49.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-config-recommended": "4.1.0",
		"eslint-plugin-compat": "4.2.0",
		"parcel": "2.9.3",
		"postcss": "8.4.29",
		"postcss-flexbugs-fixes": "5.0.2",
		"sass": "1.67.0",
		"stylelint": "15.10.3",
		"stylelint-config-recommended": "13.0.0",
		"stylelint-config-standard-scss": "11.0.0",
		"stylelint-no-unsupported-browser-features": "7.0.0",
		"stylelint-scss": "5.2.0",
		"typescript": "5.2.2"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
