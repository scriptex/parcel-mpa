{
	"name": "parcel-mpa",
	"version": "1.0.0",
	"description": "A starter template for web applications using Parcel as a module bundler.",
	"scripts": {
		"start": "parcel src/*.html",
		"build": "rm -rf dist && parcel build src/*.html",
		"lint": "yarn lint:ts && yarn lint:scss",
		"lint:ts": "eslint './src/scripts/**/*.ts'",
		"lint:scss": "stylelint src/styles/**/*.scss"
	},
	"dependencies": {},
	"devDependencies": {
		"@parcel/transformer-sass": "2.8.1",
		"@typescript-eslint/eslint-plugin": "5.45.1",
		"@typescript-eslint/parser": "5.45.1",
		"eslint": "8.29.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-config-recommended": "4.1.0",
		"eslint-plugin-compat": "4.0.2",
		"parcel": "2.8.1",
		"postcss": "8.4.19",
		"postcss-flexbugs-fixes": "5.0.2",
		"sass": "1.56.1",
		"stylelint": "14.16.0",
		"stylelint-config-recommended": "9.0.0",
		"stylelint-config-standard-scss": "6.1.0",
		"stylelint-no-unsupported-browser-features": "6.0.1",
		"stylelint-scss": "4.3.0",
		"typescript": "4.9.4"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
